/* Simple Monkey-Banana Problem Solution */
:- initialization(start).

start :-
    write('Program by: NANDA REDDY-192365034'), nl, nl,
    write('Simple Monkey-Banana Problem Solver'), nl, nl,
    solve_monkey_banana.

solve_monkey_banana :-
    nl,
    write('Solution Steps:'), nl, nl,
    write('1. Monkey moves from door to window'), nl,
    write('2. Monkey pushes box from window to center'), nl,
    write('3. Monkey climbs onto the box'), nl,
    write('4. Monkey grabs the banana'), nl, nl,
    write('The monkey got the banana! Problem solved!'), nl.

% Sample query that runs automatically
:- initialization((
    nl, write('To run: ?- solve_monkey_banana.'), nl
)).
